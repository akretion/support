<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_external_task_form" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <sheet string="Task">
                        <h1>
                            <field name="name" placeholder="Task summary..." class="oe_inline" colspan="4"/>
                        </h1>
                        <group>
                            <field name="author_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="assignee_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="model_reference" invisible="1"/>
                            <label for="task_origin"
                                attrs="{'invisible': ['|',
                                                        ('model_reference', '=', False),
                                                        ('name', '=', False)]}"/>
                            <span>
                                <field name="task_origin"
                                    attrs="{'invisible': ['|',
                                                            ('model_reference', '=', False),
                                                            ('name', '=', False)]}"/>
                                <button name="goto_document" type="object" string="Open"
                                        attrs="{'invisible': [('model_reference', '=', False)]}"
                                        class="oe_read_only" colspan="1"
                                        help="Go to the window from which the task has been defined."/>
                            </span>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Add a Description..."/>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <style type="text/css" media="screen">
                            .fa-paperclip {visibility: hidden;}
                            .fa-pencil-square-o {visibility: hidden;}
                            .o_thread_message_star {visibility: hidden;}
                        </style>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_external_task_tree" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <tree string="External Task">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_external_task_search" model="ir.ui.view">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <search string="External Task">
                    <field name="name"/>
                    <filter string="Stage" context="{'group_by': 'stage_name'}" icon="terp-partner"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_external_task_kanban">
            <field name="model">external.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_name" >
                    <field name="name"/>
                    <field name="stage_name"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable"><li><a type="edit">Edit Task</a></li></t>
                                    <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                </ul>
                            </div>

                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="task_from_elsewhere">
            <field name="name">Model to task creation</field>
            <field name="res_model">external.task</field>
            <field name="view_mode">form</field>
        </record>

        <record id="action_view_external_task" model="ir.actions.act_window">
            <field name="name">External task</field>
            <field name="res_model">external.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_external_task_search"/>
<!--             <field name="view_id" ref="view_account_list"/>
 -->        <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add an issue.
              </p><p>
                An issue created in your ERP create an external task in your intergateur to treat them. If you cant' create an issue contact your Adminstrator to check External task configuration.
              </p>
            </field>
        </record>

        <menuitem action="action_view_external_task"
            id="external_project"
            name="Support"
            sequence="100"/>

</odoo>
